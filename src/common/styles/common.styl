@import './mixin/mixin.styl'
.goods-comments
  .title
    padding-left: 18px
  .comments-header
    padding: 18px 18px 0
    .filter
      display: inline-block
      padding: 12px 0
      font-size: 12px
      color: rgb(147,153,159)
      line-height: 24px
      vertical-align: top
    .text 
      display: inline-block
      vertical-align: top
    .comments-btn-group
      padding-bottom: 18px
      .comments-btn {
        padding: 8px 12px
        font-size: 12px
        line-height:  16px
        color: #4d555d
        background-color: rgba(0, 160, 220, .2)
        
        border-radius: 2px
        &.recommend, 
        &.bad {
          color: #4d555d
        } 
        &.recommend {
          color: rbg(77, 85, 93)
          background-color: rgba(0, 160, 220, .2)
        }
        &.bad {
          background-color: rgba(77,85,93,.2)
        }
        &.active {
          background-color: rgb(0,160,220)
          color: #fff;
        }
        & ~ .comments-btn {
          margin-left: 8px
        }
      }

/* 分割区域块 */
.split-area
  width: 100%
  height: 16px
  background-color: #f3f5f7
  border-top: 1px solid rgba(7,17,27,.1)
  border-bottom: 1px solid rgba(7,17,27,.1) 